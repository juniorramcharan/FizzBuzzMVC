@model FizzBuzzMVC.Models.FizzBuzz
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>FBPage - FizzBuzz</h1>
            <h4 class="lead">
                This application will consider the two numbers entered and for each number betwween 1 and 100.
                It will print FIZZ for the numbers that are divisible by the firest number. BUZZ will be printed
                for the numbers divisible but he second number. FIZZBUZZ for the numbers divisible by both and simply print the number if it is not divisible by either
            </h4>
            <h2 class="mt-5 border-bottom border-2">Instructions</h2>
            <p>
                Enter 2 numbers. The first number will be used to evaluate Fizz.
                The second number will be used to evaluate Buzz and FizzBuzz will be determined based on the combination of the two numbers
            </p>
        </div>
        <div class="col-md-8">
            <h5>Enter Values</h5>
            @*Form goes Here*@

            <form class="row" asp-controller="Home" asp-action="FBPage" method="post">
                <div class="col">
                    <input asp-for="FizzValue" type="number" class="form-control" aria-label="Fizz Value" value="@Model.FizzValue">
                </div>
                <div class="col">
                    <input asp-for="BuzzValue" type="number" class="form-control" aria-label="Buzz Value" value="@Model.BuzzValue">
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-dark"> Display </button>
                </div>

            </form>
            <h2 class="mt-3 border-bottom border-2">Results</h2>
            <div class="table-responsive">
                @*Table goes Here*@
                @if (@Model.Results.Count > 0)
                {
                    <table class="table table-striped table-sm">
                        <thead><tr><th colspan="5">FizzBuzz Results</th></tr></thead>
                        <tbody>
                            @for (int i = 0; i < Model.Results.Count(); i+=5)
                            {
                                <tr><td>@Model.Results[i]</td><td>@Model.Results[i + 1]</td><td>@Model.Results[i + 2]</td><td>@Model.Results[i + 3]</td><td>@Model.Results[i + 4]</td></tr>

                            }
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</div>
